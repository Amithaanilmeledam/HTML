    <script>
      function predictRisk(event) {
        event.preventDefault();

        const location = document.getElementById("location").value;
        const temp = parseFloat(document.getElementById("temperature").value);
        const waterType = document.getElementById("waterType").value;
        const movement = document.getElementById("movement").value;
        const rain = document.getElementById("rain").value;

        let riskMessage = "";
        let isRisk = false;

        // Simplified logic
        if (temp > 30 && movement === "still" && rain === "no") {
          isRisk = true;
          riskMessage = `<span style="color:red; font-weight:bold;">‚ö†Ô∏è High Risk:</span> Warm, still, and stagnant water with no recent rain can support Naegleria fowleri growth. Avoid swimming.`;
        } else {
          riskMessage = `<span style="color:green; font-weight:bold;">‚úÖ Likely Safe:</span> Conditions are not favorable for the amoeba. Still, be cautious near warm water.`;
        }

        // Display result
        document.getElementById("result").innerHTML = `
        <h3>üß™ Prediction Result</h3>
        ${location ? `<p><strong>Location:</strong> ${location}</p>` : ""}
        <p><strong>Air Temp:</strong> ${temp} ¬∞C</p>
        <p><strong>Water Type:</strong> ${waterType}</p>
        <p><strong>Water Movement:</strong> ${movement}</p>
        <p><strong>Recent Rain:</strong> ${rain}</p>
        <p style="margin-top: 15px;">${riskMessage}</p>
      `;
      }
    </script>
